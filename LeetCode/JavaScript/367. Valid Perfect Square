/**
 * @param {number} num
 * @return {boolean}
 */
var isPerfectSquare = function(num) {
    if(num % 2 === 0){
        for(let i = 0; i < num; i+=2){
            if(i*i === num)
                return true;
        }
    }else{
        for(let i = 1; i < num; i+=2){
            if(i*i === num)
                return true;
        }
    }
    
    return false;
};
